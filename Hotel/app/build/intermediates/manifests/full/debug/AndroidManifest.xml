<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byzx.myhotel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.byzx.myhotel.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.byzx.myhotel.LoginActivity" />
        <activity android:name="com.byzx.myhotel.RegisterActivity" />
        <activity android:name="com.byzx.myhotel.MainActivity" />
        <activity
            android:name="com.byzx.myhotel.RoomTypeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FloatActivity" />
        <activity android:name="com.byzx.myhotel.RoomInfoActivity" />
        <activity android:name="com.byzx.myhotel.CheckInActivity" />
        <activity android:name="com.byzx.myhotel.CheckInListActivity" />
    </application>

</manifest>