<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.myontheway01.view.XCRoundImageView
        android:id="@+id/iv_user_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo_tencentweibo" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_user_pic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_user_pic"
        android:text="用户昵称"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_feedback_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_user_pic"
        android:layout_below="@+id/iv_user_pic"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="这里是反馈内容" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_user_pic"
        android:layout_marginRight="15dp"
        android:text="2015-11-16" 
        android:textSize="18sp"/>

</RelativeLayout>
