<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_post_item"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_post_user_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/default_photo"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_post_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="3dp"
                    android:text="昵称"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="时间"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:padding="5dp"
        android:text="内容"
        android:textColor="#000000"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_post_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_team_add" />

    <TextView
        android:id="@+id/tv_post_likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0人觉得很赞" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="150dp" >
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
           <ImageView
            android:id="@+id/iv_post_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_love"
            android:clickable="true"
            android:focusable="false" />


           <TextView
               android:id="@+id/tv_like_or_not"
               android:gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/iv_post_like"
               android:layout_alignRight="@+id/iv_post_like"
               android:layout_centerVertical="true"
               android:text="1"
               android:textColor="#ffffff" />
                
        </RelativeLayout>
        
<!--  android:text="点赞" -->
        <ImageView
            android:id="@+id/iv_post_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            
            android:src="@drawable/ic_action_comment"
            android:clickable="true"
            android:focusable="false" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll_post_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
         >

        <EditText
            android:id="@+id/et_post_comment_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:ems="10" 
            android:hint="说点什么...."
            android:visibility="gone">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_comment_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/login_button_bg"
            android:text="ok" 
            android:visibility="gone"/>

        
        
    </LinearLayout>
  
     <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:background="#ffffff" >

                <com.example.mytrip.view.MyListView
                    android:id="@+id/lv_user_comment_replys"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    />
            </FrameLayout>
       <LinearLayout 
        android:id="@+id/ll_reply_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
         >

        <EditText
            android:id="@+id/et_reply_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:ems="10" 
            android:hint="说点什么...."
            android:visibility="gone">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_reply_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/login_button_bg"
            android:text="ok" 
            android:visibility="gone"/>

        
        
    </LinearLayout>  


</LinearLayout>