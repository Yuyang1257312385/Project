<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/view_1"
        android:layout_alignTop="@+id/view_1"
        android:background="#00000000"
        android:padding="30dp" />

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_marginLeft="71dp"
        android:background="#A6A6A6" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/view_1"
        android:layout_marginLeft="65dp"
        android:src="@drawable/check_on" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_below="@+id/image"
        android:layout_marginLeft="71dp"
        android:background="#A6A6A6" />

    <TextView
        android:id="@+id/tv_creat_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/image"
        android:visibility="invisible"
        android:text="发表的时间" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_creat_time1"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/icon_bg_msg_recv_admin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_content_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="发表的消息" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="157dp"
            android:layout_height="35dp"
            android:text="发消息时的位置"
            android:textColor="#7D9EC0" 
            android:textSize="9sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_creat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="18sp" 
        android:text="时间"/>

</RelativeLayout>