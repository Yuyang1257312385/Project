<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        
        android:background="@drawable/bg_item_write" >

        <ImageView
            android:id="@+id/iv_headimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:src="@drawable/img_01" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical" >
           <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_client_name_constant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="房客姓名:"
                android:textSize="18sp"
                android:gravity="center"
                 />
            <TextView
                android:id="@+id/tv_client_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:gravity="center|left"
                 />
             </LinearLayout>
             <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_client_sex_constant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="房客性别:"
                android:gravity="center"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_client_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:gravity="center|left"
                android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
           <TextView
                android:id="@+id/tv_client_id_constant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="身份账号:" 
                android:textSize="18sp"
                android:gravity="center"/>
           <TextView
                android:id="@+id/tv_client_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" 
                android:gravity="center|left"
                android:textSize="18sp"/>
         </LinearLayout>
                     <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
           <TextView
                android:id="@+id/tv_room_num1_constant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="房间号码:" 
                android:gravity="center"
                android:textSize="18sp"/>
           <TextView
                android:id="@+id/tv_room_num1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" 
                android:gravity="center|left"
                android:textSize="18sp"/>
         </LinearLayout>
           
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_room_price1_constant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="房间价格:" 
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_room_price1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" 
                android:gravity="center|left"
                android:textSize="18sp"/>
           </LinearLayout>
          <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_check_in_time1_constant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="入住时间:" 
                android:textSize="18sp"
                android:gravity="center"/>
             <TextView
                android:id="@+id/tv_check_in_time1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" 
                android:gravity="center|left"
                android:textSize="18sp"/>
              </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button 
                    android:id="@+id/btn_check_out"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"                   
                    android:text="退    房"
                    android:textSize="18sp"
                    android:background="@drawable/login_button_bg"/>
</LinearLayout>
